<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="button_large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient_blue</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">@dimen/margin_2_super</item>
        <item name="android:layout_marginEnd">@dimen/margin_2_super</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>
    <style name="button_medium" parent="button_large">
        <item name="android:layout_marginStart">70dp</item>
        <item name="android:layout_marginEnd">70dp</item>
    </style>

    <style name="circularImageViewShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="auth_text_field" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/corner_four_light_blue</item>
        <item name="android:textColorHint">@color/sky_blue</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="ic_back">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

    <style name="ic_checked">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="status_circle">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
    </style>
    <style name="menu_item_style">
        <item name="android:background">@drawable/corner_light_blue</item>
    </style>

</resources>