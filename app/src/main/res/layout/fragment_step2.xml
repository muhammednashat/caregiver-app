<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
         <variable
             name="viewModel"
             type="mnshat.dev.myproject.users.patient.tools.coffeeideas.presentaion.CofeViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_cofe6"
        tools:context=".users.patient.tools.coffeeideas.presentaion.Step1Fragment">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView32"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/image_lamp3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp"
                android:text="@string/step_2_taste_the_idea_is_it_balanced"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView32" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_2_super"
                android:layout_marginEnd="@dimen/margin_2_super"
                android:gravity="center"
                android:text="@string/before_you_drink"
                android:textColor="#193453"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout15"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp"
                android:background="@drawable/background_cofe"
                android:paddingStart="@dimen/margin_large"
                android:paddingTop="150dp"
                android:paddingEnd="@dimen/margin_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scrollbarSize="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_large">

                            <TextView
                                android:id="@+id/textView64"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/circle_blue"
                                android:backgroundTint="#5994d5"
                                android:gravity="center"

                                android:text="@string/one"
                                android:textColor="@color/white"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView65"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:layout_marginEnd="@dimen/margin_medium"
                                android:text="@string/start_by_identifying_your_emotion"
                                android:textColor="#193453"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/textView64"
                                app:layout_constraintTop_toTopOf="parent" />

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                               android:text="@={viewModel.textQuestion1}"
                                android:background="@drawable/corner_four_gray"
                                android:hint="@string/write_here"
                                android:padding="@dimen/margin_large"
                                app:layout_constraintEnd_toEndOf="@+id/textView65"
                                app:layout_constraintStart_toStartOf="@+id/textView65"
                                app:layout_constraintTop_toBottomOf="@+id/textView65" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_large">

                            <TextView
                                android:id="@+id/textgVie"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/circle_blue"
                                android:backgroundTint="#5994d5"
                                android:gravity="center"
                                android:text="@string/two"
                                android:textColor="@color/white"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textViewe"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:layout_marginEnd="@dimen/margin_medium"
                                android:text="@string/check_the_truth_of_the_idea_and_whether_there_is_evidence_to_support_it_is_this_idea_based_on_concrete_facts_or_merely_an_assumption_or_an_emotional_response_to_a_particular_situation"
                                android:textColor="#193453"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/textgVie"
                                app:layout_constraintTop_toTopOf="parent" />

                            <EditText
                                android:id="@+id/editQ1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/corner_four_gray"
                                android:hint="@string/write_here"
                                android:text="@={viewModel.textQuestion2}"

                                android:padding="@dimen/margin_large"
                                app:layout_constraintEnd_toEndOf="@+id/textViewe"
                                app:layout_constraintStart_toStartOf="@+id/textViewe"
                                app:layout_constraintTop_toBottomOf="@+id/textViewe" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_large">

                            <TextView
                                android:id="@+id/textgViw64"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/circle_blue"
                                android:backgroundTint="#5994d5"
                                android:gravity="center"
                                android:text="@string/three"
                                android:textColor="@color/white"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textVie6e"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:layout_marginEnd="@dimen/margin_medium"
                                android:text="@string/consider_the_effect_of_the_idea"
                                android:textColor="#193453"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/textgViw64"
                                app:layout_constraintTop_toTopOf="parent" />

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                android:background="@drawable/corner_four_gray"
                                android:hint="@string/write_here"
                                android:text="@={viewModel.textQuestion3}"

                                android:padding="@dimen/margin_large"
                                app:layout_constraintEnd_toEndOf="@+id/textVie6e"
                                app:layout_constraintStart_toStartOf="@+id/textVie6e"
                                app:layout_constraintTop_toBottomOf="@+id/textVie6e" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_large">

                            <TextView
                                android:id="@+id/textgVew64"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/circle_blue"
                                android:backgroundTint="#5994d5"
                                android:gravity="center"
                                android:text="@string/four"
                                android:textColor="@color/white"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textVie"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:layout_marginEnd="@dimen/margin_medium"
                                android:text="@string/examine_the_available_evidence"
                                android:textColor="#193453"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/textgVew64"
                                app:layout_constraintTop_toTopOf="parent" />

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                android:text="@={viewModel.textQuestion4}"

                                android:background="@drawable/corner_four_gray"
                                android:hint="@string/write_here"
                                android:padding="@dimen/margin_large"
                                app:layout_constraintEnd_toEndOf="@+id/textVie"
                                app:layout_constraintStart_toStartOf="@+id/textVie"
                                app:layout_constraintTop_toBottomOf="@+id/textVie" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_large">

                            <TextView
                                android:id="@+id/textgView64"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:background="@drawable/circle_blue"
                                android:backgroundTint="#5994d5"
                                android:gravity="center"
                                android:text="@string/five"
                                android:textColor="@color/white"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView6e"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_medium"
                                android:layout_marginEnd="@dimen/margin_medium"
                                android:text="@string/reframe_the_idea_what_do_i_have"
                                android:textColor="#193453"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/textgView64"
                                app:layout_constraintTop_toTopOf="parent" />

                            <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_small"
                                android:text="@={viewModel.textQuestion5}"

                                android:background="@drawable/corner_four_gray"
                                android:hint="@string/write_here"
                                android:padding="@dimen/margin_large"
                                app:layout_constraintEnd_toEndOf="@+id/textView6e"
                                app:layout_constraintStart_toStartOf="@+id/textView6e"
                                app:layout_constraintTop_toBottomOf="@+id/textView6e" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent">


                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/constraintNext"
                                android:layout_width="100dp"
                                android:layout_height="55dp"
                                android:layout_marginStart="@dimen/margin_small"
                                android:layout_marginTop="@dimen/margin_large"
                                android:background="@drawable/corner_normal"
                                android:backgroundTint="#204167"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toEndOf="@+id/back"
                                app:layout_constraintTop_toTopOf="parent">

                                <ImageView
                                    android:id="@+id/next"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_margin="@dimen/margin_large"
                                    android:visibility="gone"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/textNext"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.5"
                                    app:srcCompat="@drawable/baseline_arrow_forward_24"
                                    app:tint="@color/white" />

                                <TextView
                                    android:id="@+id/textNext"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/next"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.5"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.5" />


                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <ImageView
                                android:id="@+id/back"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginEnd="@dimen/margin_small"
                                android:background="@drawable/circle_border_blue3"
                                android:padding="@dimen/margin_medium"

                                app:layout_constraintBottom_toBottomOf="@+id/constraintNext"
                                app:layout_constraintEnd_toStartOf="@+id/constraintNext"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintHorizontal_chainStyle="packed"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/constraintNext"
                                app:layout_constraintVertical_bias="0.4"
                                app:srcCompat="@drawable/baseline_arrow_back_24"
                                app:tint="#204167" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </ScrollView>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>