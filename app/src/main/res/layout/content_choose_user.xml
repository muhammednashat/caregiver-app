<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/user"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_2_super"
        android:layout_marginEnd="@dimen/margin_large"
        android:background="@drawable/corner_four_gray"
        app:layout_constraintEnd_toStartOf="@+id/caregiver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            app:layout_constraintBottom_toBottomOf="@+id/patient_text"
            app:layout_constraintEnd_toStartOf="@+id/patient_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/patient_text"
            app:srcCompat="@drawable/baseline_check_24"
            style="@style/ic_checked" />

        <ImageView
            android:id="@+id/imageView91"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/patient_text"
            app:srcCompat="@drawable/img_patient" />
        <TextView
            android:id="@+id/patient_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/user"
            android:textColor="@color/dark_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/patientStatusCircle"
            app:layout_constraintBottom_toBottomOf="@+id/patient_text"
            app:layout_constraintEnd_toStartOf="@+id/patient_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/patient_text"
            app:srcCompat="@drawable/circle_gray"
            style="@style/status_circle"
            />

        <ImageView
            style="@style/status_circle"
            android:visibility="gone"
            android:id="@+id/patientStatusChecked"
            app:layout_constraintBottom_toBottomOf="@+id/patient_text"
            app:layout_constraintEnd_toStartOf="@+id/patient_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/patient_text"
            app:srcCompat="@drawable/ic_circle_checked" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/caregiver"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/corner_four_gray"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginEnd="@dimen/margin_2_super"
        app:layout_constraintBottom_toBottomOf="@+id/user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user"
        app:layout_constraintTop_toTopOf="@+id/user">

        <ImageView
            app:layout_constraintBottom_toBottomOf="@+id/care_text"
            app:layout_constraintEnd_toStartOf="@+id/care_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/care_text"
            app:srcCompat="@drawable/baseline_check_24"
            style="@style/ic_checked" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="36dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/care_text"
            app:srcCompat="@drawable/img_supporter" />

        <TextView
            android:id="@+id/care_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="@string/caregiver"
            android:textColor="@color/dark_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/careStatusCircle"
            app:layout_constraintBottom_toBottomOf="@+id/care_text"
            app:layout_constraintEnd_toStartOf="@+id/care_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/care_text"
            app:srcCompat="@drawable/circle_gray"
            style="@style/status_circle" />

        <ImageView
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/care_text"
            app:layout_constraintEnd_toStartOf="@+id/care_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/care_text"
            style="@style/status_circle"
            android:id="@+id/careStatusChecked"
            app:srcCompat="@drawable/ic_circle_checked" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


