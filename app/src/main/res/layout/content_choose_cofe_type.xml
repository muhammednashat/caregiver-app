<?xml version="1.0" encoding="utf-8"?>

<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarSize="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_large"
            app:cardCornerRadius="25dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cup1"
                android:padding="@dimen/margin_medium">

                <ImageView
                    android:id="@+id/imageView381"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/image_cofe1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scrollbarSize="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView381"
                    app:layout_constraintVertical_bias="0.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/bitter_coffee"
                            android:textColor="#d40f20"

                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#204167"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:text="@string/negative_thinking"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_marginBottom="@dimen/margin_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:textColor="#204167"

                            android:layout_gravity="center"
                            android:text="@string/depressing_thoughts"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </ScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:layout_width="170dp"

            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_large"

            app:cardCornerRadius="25dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cup2"

                android:padding="@dimen/margin_medium">

                <ImageView
                    android:id="@+id/imageView38"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/image_cup2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scrollbarSize="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView38"
                    app:layout_constraintVertical_bias="0.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/over_sugary_coffee"
                            android:textColor="#f4aa34"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#204167"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:text="@string/unrealistic_thinking"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_marginBottom="@dimen/margin_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:textColor="#204167"

                            android:layout_gravity="center"
                            android:text="@string/ignoring_challenges"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </ScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="170dp"

            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/margin_large"

            app:cardCornerRadius="25dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:id="@+id/cup3"

                android:layout_height="match_parent"
                android:padding="@dimen/margin_medium">

                <ImageView
                    android:id="@+id/imageView382"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/image_cup3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:scrollbarSize="0dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView382"
                    app:layout_constraintVertical_bias="0.5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="@string/balanced_coffee"
                            android:textColor="#5cb348"                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#204167"
                            android:textStyle="bold"
                            android:layout_gravity="center"
                            android:text="@string/realistic_thinking"
                            android:layout_marginTop="@dimen/margin_small"
                            android:layout_marginBottom="@dimen/margin_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:gravity="center"
                            android:textColor="#204167"
                            android:layout_gravity="center"
                            android:text="@string/acknowledge_the_difficulties"
                            android:layout_height="wrap_content" />

                    </LinearLayout>
                </ScrollView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</HorizontalScrollView>