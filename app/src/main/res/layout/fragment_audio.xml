<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/image_test6"
            android:scaleType="fitXY"
            android:alpha="0.3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="@dimen/margin_large"
            android:layout_marginTop="18dp"
            android:padding="@dimen/margin_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back_ios"
            app:tint="@color/white" />

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            app:cardCornerRadius="12dp"
            android:layout_height="200dp"
            android:layout_marginTop="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.452"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:scaleType="fitXY"
          android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/image_test6"
                />
        </androidx.cardview.widget.CardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="132dp"
            android:background="@drawable/corner_top_lift_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView6"
            app:layout_constraintVertical_bias="0.044">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/subCategory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="140dp"
                        android:background="@drawable/corner_large"
                        android:backgroundTint="#ebcdfb"
                        android:paddingStart="@dimen/margin_large"
                        android:paddingTop="@dimen/margin_small"
                        android:paddingEnd="@dimen/margin_large"
                        android:paddingBottom="@dimen/margin_small"
                        android:text="الصحة النفسية"
                        android:textSize="@dimen/text_size_large"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_large"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:text="Tedfasdfsdafdfsdafsdfsdfdsfdfdfdsfdfdsfadfdsfdfdsfdsfsdfsdfsdffddfw"
                        android:textSize="@dimen/text_size_large"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/subCategory" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_large"
                        android:text="2/10/2022"
                        app:layout_constraintStart_toEndOf="@+id/appCompatImageView5"
                        app:layout_constraintTop_toBottomOf="@+id/title" />

                    <TextView
                        android:id="@+id/labelDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_large"
                        android:text="@string/show_description"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/date" />

                    <TextView
                        android:id="@+id/textDescription"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_large"
                        android:layout_marginTop="@dimen/margin_large"
                        android:layout_marginEnd="47dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/date" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iconShowDescription"
                        android:layout_width="28dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_down"
                        app:layout_constraintBottom_toBottomOf="@+id/labelDescription"
                        app:layout_constraintStart_toEndOf="@+id/labelDescription"
                        app:layout_constraintTop_toTopOf="@+id/labelDescription"
                        app:layout_constraintVertical_bias="0.0"
                        app:tint="@color/black" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iconHideDescription"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginEnd="@dimen/margin_large"
                        android:background="@drawable/circle_gray"
                        android:padding="@dimen/margin_small"
                        android:src="@drawable/ic_close"
                        android:visibility="gone"
                        app:layout_constraintBottom_toTopOf="@+id/textDescription"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="@color/black" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/appCompatImageView5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_calendar2"
                        app:layout_constraintBottom_toBottomOf="@+id/date"
                        app:layout_constraintStart_toStartOf="@+id/title"
                        app:layout_constraintTop_toTopOf="@+id/date"
                        app:layout_constraintVertical_bias="0.0"
                        app:tint="@color/burnt_orange" />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_marginTop="@dimen/margin_2_super"
                        android:background="@drawable/corner_top_lift"
                        android:padding="@dimen/margin_large"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textDescription"
                        app:layout_constraintVertical_bias="1.0">

                        <SeekBar
                            android:id="@+id/seekBar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_super"
                            android:scrollbarSize="155dp"
                            android:scrollbars="none"
                            app:layout_constraintBottom_toTopOf="@+id/suggest"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent" />

                        <ImageView
                            android:id="@+id/playButton"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:src="@drawable/ic_play_circle2"
                            app:layout_constraintBottom_toTopOf="@+id/seekBar"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.5" />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginEnd="66dp"
                            android:id="@+id/replay"
                            android:src="@drawable/ic_replay_10"
                            app:layout_constraintBottom_toBottomOf="@+id/playButton"
                            app:layout_constraintEnd_toStartOf="@+id/playButton"
                            app:layout_constraintTop_toTopOf="@+id/playButton" />

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_marginStart="66dp"
                            android:id="@+id/forward"
                            android:src="@drawable/ic_forward_10"
                            app:layout_constraintBottom_toBottomOf="@+id/playButton"
                            app:layout_constraintStart_toEndOf="@+id/playButton"
                            app:layout_constraintTop_toTopOf="@+id/playButton" />

                        <ImageView
                            android:id="@+id/suggest"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_shuffle"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/playButton"
                            app:tint="@color/dark_gray" />

                        <ImageView
                            android:id="@+id/volumeOff"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_volume_up"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/playButton" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>

            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>

</layout>