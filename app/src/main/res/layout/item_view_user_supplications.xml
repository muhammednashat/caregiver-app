<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@drawable/corner_four_dark_blue"
        android:backgroundTint="#4e90b8">

        <TextView
            android:id="@+id/textName"
            android:layout_width="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/margin_large"
            android:layout_height="wrap_content"
            android:text="ffdfsdfsdfsdfsdfsdfdsfsdfsdfsdfdsfd "
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:srcCompat="@drawable/ic_more_horiz" />

        <TextView
            android:id="@+id/textNumber"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="34"
            android:textColor="@color/white"
            android:background="@drawable/corner_border_yelow"
            android:layout_marginEnd="@dimen/margin_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>