<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_back"
            style="@style/ic_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_back_ios" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ic_more"
            android:layout_width="32dp"
            android:layout_height="24dp"
            android:layout_marginEnd="@dimen/margin_medium"
            app:layout_constraintBottom_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView3"
            app:srcCompat="@drawable/ic_more_horiz" />


        <TextView
            android:id="@+id/textView3"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/ic_back"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ic_back"
            />
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="@dimen/margin_large"
            android:background="@drawable/line"
            android:backgroundTint="@color/light_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="0dp"
           app:layout_constraintBottom_toBottomOf="parent"
           app:layout_constraintEnd_toEndOf="parent"
           app:layout_constraintHorizontal_bias="0.5"
          android:padding="@dimen/padding_medium"
           app:layout_constraintStart_toStartOf="parent"
           app:layout_constraintTop_toBottomOf="@+id/line">

           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="wrap_content">

               <androidx.constraintlayout.widget.ConstraintLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   app:layout_constraintBottom_toBottomOf="parent"
                   app:layout_constraintEnd_toEndOf="parent"
                   app:layout_constraintHorizontal_bias="0.5"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toBottomOf="@+id/line">
                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:id="@+id/constraintLayout2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="@dimen/margin_medium"
                       android:background="@drawable/corner_four_gray"
                       android:paddingStart="@dimen/padding_medium"
                       android:paddingTop="@dimen/padding_large"
                       android:paddingEnd="@dimen/padding_medium"
                       android:paddingBottom="@dimen/padding_large"
                       app:layout_constraintEnd_toEndOf="parent"
                       app:layout_constraintStart_toStartOf="parent"
                       app:layout_constraintTop_toTopOf="parent">

                       <com.google.android.material.imageview.ShapeableImageView
                           android:id="@+id/image_user"
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:layout_gravity="center_horizontal"
                           android:background="#ebebe3"
                           app:layout_constraintStart_toStartOf="parent"
                           app:layout_constraintTop_toTopOf="parent"
                           app:layout_constraintVertical_bias="0.5"
                           app:shapeAppearanceOverlay="@style/circularImageViewShape"
                           app:srcCompat="@drawable/ic_user_profile" />

                       <TextView
                           android:id="@+id/name_supporter"
                           style="@style/TextAppearance.AppCompat.Large"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginStart="16dp"
                           android:gravity="center"
                           android:text="سارة احمد "
                           android:textColor="#3f484f"
                           android:textStyle="bold"
                           app:layout_constraintStart_toEndOf="@+id/image_user"
                           app:layout_constraintTop_toTopOf="@+id/image_user" />

                       <TextView
                           android:id="@+id/status"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="@dimen/margin_small"
                           android:background="@drawable/corner_light_blue"
                           android:gravity="center"
                           android:paddingStart="@dimen/padding_medium"
                           android:paddingTop="4dp"
                           android:paddingEnd="@dimen/padding_medium"
                           android:paddingBottom="4dp"
                           android:text="نشط"
                           android:textColor="@color/white"
                           app:layout_constraintStart_toStartOf="@+id/name_supporter"
                           app:layout_constraintTop_toBottomOf="@+id/name_supporter" />

                       <androidx.appcompat.widget.AppCompatImageView
                           android:id="@+id/appCompatImageView3"
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:layout_marginEnd="16dp"
                           android:tint="@color/medium_gray"
                           android:visibility="gone"

                           app:layout_constraintBottom_toBottomOf="@+id/status"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintTop_toTopOf="@+id/status"
                           app:srcCompat="@drawable/ic_mail" />

                       <androidx.appcompat.widget.AppCompatImageView
                           android:id="@+id/appCompatImageView4"
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:layout_marginEnd="28dp"
                           android:tint="@color/medium_gray"
                         android:visibility="gone"
                           app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView3"
                           app:layout_constraintEnd_toStartOf="@+id/appCompatImageView3"
                           app:layout_constraintTop_toTopOf="@+id/appCompatImageView3"
                           app:layout_constraintVertical_bias="0.0"
                           app:srcCompat="@drawable/ic_phone" />

                       <androidx.appcompat.widget.AppCompatImageView
                           android:layout_width="20dp"
                           android:layout_height="20dp"
                           android:layout_marginEnd="28dp"
                           android:visibility="gone"

                           android:tint="@color/medium_gray"
                           app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView3"
                           app:layout_constraintEnd_toStartOf="@+id/appCompatImageView4"
                           app:layout_constraintTop_toTopOf="@+id/appCompatImageView3"
                           app:srcCompat="@drawable/ic_mail" />

                   </androidx.constraintlayout.widget.ConstraintLayout>


               </androidx.constraintlayout.widget.ConstraintLayout>

               <include
                   android:id="@+id/permissions"
                   layout="@layout/content_permission_supporter"
                   android:layout_marginTop="@dimen/margin_large"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   />

               <TextView
                   android:id="@+id/save"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="80dp"
                   android:background="@drawable/corner_light_blue"
                   android:gravity="center"
                   android:paddingStart="@dimen/padding_medium"
                   android:paddingTop="4dp"
                   android:visibility="gone"
                   android:layout_gravity="center"
                   android:paddingEnd="@dimen/padding_medium"
                   android:paddingBottom="4dp"
                   android:text="save"
                   android:textColor="@color/white"
                   app:layout_constraintStart_toStartOf="@+id/name_supporter"
                   app:layout_constraintTop_toBottomOf="@+id/name_supporter" />

           </LinearLayout>



       </ScrollView>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>


