<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:background = "#0f161a"
        android:id="@+id/root"
        android:layout_height="match_parent"
        tools:context=".users.patient.moodTracking.presentaion.PostDailyProgramFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:background="@drawable/corner_larg_top_lift_right"
            android:backgroundTint="#6ea5da">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/image_mood123"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dynamic_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/corner_larg_top_lift_right2"
                android:backgroundTint="#6ea5da"
                android:padding="@dimen/margin_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/icon1">

                <include
                    android:id="@+id/container2"

                    layout="@layout/content_post_daily_program2" />


                <include
                    android:id="@+id/container1"
                    android:visibility="gone"

                    layout="@layout/content_post_daily_program1"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_next"
                    android:layout_width="150dp"
                    android:textSize="18sp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="28dp"
                    android:background="@drawable/gradient_orange"
                    android:backgroundTint="#204167"
                    android:text="@string/next"
                    android:textColor="@color/white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>
</layout>