<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_cofe_54"
    tools:context=".users.patient.tools.coffeeideas.Step1Fragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView32"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/image_lamp3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="@string/step_5_taste_the_new_thought"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView32" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_2_super"
            android:layout_marginEnd="@dimen/margin_2_super"
            android:gravity="center"
            android:text="@string/now_read_the_reframed_thought_aloud_and_reflect_on_it"
            android:textColor="#193453"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:background="@drawable/background_cofe"
            android:paddingStart="@dimen/margin_large"
            android:paddingTop="140dp"
            android:paddingEnd="@dimen/margin_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scrollbarSize="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_large"
                        android:layout_height="wrap_content">

                     <ImageView
                         android:layout_width="24dp"
                         android:src="@drawable/ic_start12"
                         android:layout_marginEnd="@dimen/margin_medium"
                         android:layout_height="24dp"
                         app:tint="#87c1e7" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="@string/how_do_you_feel_now_that"
                            android:textColor="#193453"

                            android:layout_height="wrap_content"/>

                    </LinearLayout>




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_large"
                        android:layout_height="wrap_content">

                     <ImageView
                         android:layout_width="24dp"
                         android:src="@drawable/ic_start12"
                         android:layout_marginEnd="@dimen/margin_medium"
                         android:layout_height="24dp"
                         app:tint="#87c1e7" />
                        <TextView
                            android:layout_width="wrap_content"
android:text="@string/has_this_new_reframing"
                            android:textColor="#193453"

                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/margin_large"
                        android:layout_height="wrap_content">

                     <ImageView
                         android:layout_width="24dp"
                         android:src="@drawable/ic_start12"
                         android:layout_marginEnd="@dimen/margin_medium"
                         android:layout_height="24dp"
                         app:tint="#87c1e7" />
                        <TextView
                            android:layout_width="wrap_content"
android:text="@string/how_can_you_continue"
                            android:textColor="#193453"

                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin_large"
                        >

                        <ImageView
                            android:id="@+id/imageView34"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/icon_mark"
                            app:layout_constraintBottom_toTopOf="@+id/textView70"
                            app:layout_constraintStart_toStartOf="@+id/textView70" />

                        <TextView
                            android:id="@+id/textView70"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="26dp"
                            android:text="@string/always_choose_thoughts_that"
                            android:textColor="#4a94cf"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:src="@drawable/icon_mark"
                            app:layout_constraintEnd_toEndOf="@+id/textView70"
                            app:layout_constraintTop_toBottomOf="@+id/textView70" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:background="@drawable/background_cofe"
                        android:paddingTop="@dimen/margin_large"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/constraintNext"
                            android:layout_width="100dp"
                            android:layout_height="55dp"
                            android:layout_marginStart="@dimen/margin_small"
                            android:background="@drawable/corner_normal"
                            android:backgroundTint="#204167"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/back"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/next"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="@dimen/margin_large"
                                android:visibility="gone"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toEndOf="@+id/textNext"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.5"
                                app:srcCompat="@drawable/baseline_arrow_forward_24"
                                app:tint="@color/white" />

                            <TextView
                                android:id="@+id/textNext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/next"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintHorizontal_bias="0.5"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_bias="0.5" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <ImageView
                            android:id="@+id/back"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="@dimen/margin_small"
                            android:background="@drawable/circle_border_blue3"
                            android:padding="@dimen/margin_medium"

                            app:layout_constraintBottom_toBottomOf="@+id/constraintNext"
                            app:layout_constraintEnd_toStartOf="@+id/constraintNext"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/constraintNext"
                            app:layout_constraintVertical_bias="0.4"
                            app:srcCompat="@drawable/baseline_arrow_back_24"
                            app:tint="#204167" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>


            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>